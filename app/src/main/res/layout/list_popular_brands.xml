    <RelativeLayout
        android:id="@+id/lay_pop_img"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:fastScrollEnabled="true">

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="35dp"
            android:background="@drawable/card_bg_grad" />

        <ImageView
            android:id="@+id/popular_brands_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_brand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_pop_img"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/xxhdpi_5"
        android:textSize="@dimen/t_xxh_12"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:fontFamily="@font/sourcesanspro_semibold"/>

</RelativeLayout>