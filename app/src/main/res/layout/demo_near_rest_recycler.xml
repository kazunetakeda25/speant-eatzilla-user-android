<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="@dimen/xxhdpi_10"
    app:ignore="NamespaceTypo">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xxhdpi_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hotel_img"
                    android:layout_width="@dimen/xxhdpi_75"
                    android:layout_height="@dimen/xxhdpi_75"
                    android:layout_centerVertical="true"
                    android:background="@color/shimmer_bg"/>

                <RelativeLayout
                    android:id="@+id/hotel_closed_relative"
                    android:layout_width="@dimen/xxhdpi_75"
                    android:layout_height="@dimen/xxhdpi_75"
                    android:visibility="gone"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#ccd1d1d1"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closed"
                        android:textColor="@color/txt_color"
                        android:layout_centerInParent="true"
                        android:visibility="visible" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_toRightOf="@+id/hotel_img">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/hotel_detail_rating_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_margin="@dimen/xxhdpi_10"
                                android:drawableLeft="@drawable/ic_star"
                                android:drawablePadding="@dimen/xxhdpi_5"
                                android:paddingBottom="3dp"
                                android:paddingLeft="@dimen/xxhdpi_5"
                                android:visibility="gone"
                                android:paddingRight="@dimen/xxhdpi_5"
                                android:paddingTop="3dp"
                                android:background="@color/shimmer_bg"
                                android:textColor="@color/white"
                                android:textSize="@dimen/t_xxh_12" />

                            <LinearLayout
                                android:id="@+id/hotel_detail_linear"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@+id/hotel_detail_rating_txt"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/hotel_detail_hotel_name_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/shimmer_bg"
                                    android:textColor="@color/txt_color"
                                    android:textSize="@dimen/t_xxh_16"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/hotel_detail_hotel_discount_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/xxhdpi_5"
                                    android:background="@color/shimmer_bg"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/t_xxh_10" />


                            </LinearLayout>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="@dimen/xxhdpi_5"
                            android:layout_marginTop="@dimen/xxhdpi_5"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="2dp"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/hotel_detail_time_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/shimmer_bg"
                                android:textColor="@color/txt_color"
                                android:layout_marginRight="@dimen/xxhdpi_10"
                                android:textSize="@dimen/t_xxh_12" />

                            <TextView
                                android:id="@+id/hotel_detail_amt_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:visibility="gone"
                                android:background="@color/shimmer_bg"
                                android:textColor="@color/txt_color"
                                android:textSize="@dimen/t_xxh_12" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>

</RelativeLayout>