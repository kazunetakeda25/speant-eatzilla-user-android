<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/xxhdpi_10">

            <RelativeLayout
                android:id="@+id/edt_profile_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xxhdpi_10"
                android:layout_marginTop="@dimen/xxhdpi_5"
                android:layout_marginEnd="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_5">

                <com.speant.user.Common.customViews.RoundedImageView
                    android:id="@+id/user_prof_img"
                    android:layout_width="@dimen/xxhdpi_50"
                    android:layout_height="@dimen/xxhdpi_50"
                    android:layout_marginRight="@dimen/xxhdpi_10"
                    android:src="@drawable/ic_user"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/lay_profile_det"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/lay_user_det"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/prof_edit_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/xxhdpi_5"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:text="Edit"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/t_xxh_16" />

                        <TextView
                            android:id="@+id/prof_user_name_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/prof_edit_txt"
                            android:fontFamily="@font/sourcesanspro_semibold"
                            android:padding="@dimen/xxhdpi_5"
                            android:text="User name"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/t_xxh_18" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_user_det"
                        android:layout_marginTop="@dimen/xxhdpi_10"
                        android:layout_toEndOf="@id/user_prof_img"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/prof_user_mbl_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_phone"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center_vertical"
                            android:maxLength="15"
                            android:padding="@dimen/xxhdpi_5"
                            android:text="+91 99454 54545"
                            android:textAlignment="viewStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/t_xxh_14" />

                        <!-- <android.support.v7.widget.AppCompatImageView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginStart="@dimen/xxhdpi_20"
                             android:layout_marginEnd="@dimen/xxhdpi_20"
                             android:src="@drawable/ic_star_black"
                             android:visibility="invisible" />-->

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/prof_user_email_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/xxhdpi_20"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_mail"
                            android:drawablePadding="@dimen/xxhdpi_10"
                            android:ellipsize="end"
                            android:fontFamily="@font/sourcesanspro_regular"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:padding="@dimen/xxhdpi_5"
                            android:text="test@test.com"
                            android:textAlignment="viewStart"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textSize="@dimen/t_xxh_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxhdpi_20">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_login_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorAccent"
                        android:fontFamily="@font/sourcesanspro_bold"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="LOGIN / SIGNUP"
                        android:textColor="@color/white"
                        android:textSize="@dimen/t_xxh_18" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="@dimen/xxhdpi_5"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginEnd="@dimen/xxhdpi_5"
                android:layout_marginBottom="@dimen/xxhdpi_5"
                android:background="@color/pale_grey" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/xxhdpi_10"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sourcesanspro_semibold"
                android:text="My Account"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/t_xxh_18" />

            <RelativeLayout
                android:id="@+id/prof_manage_addr_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:drawableLeft="@drawable/ic_home_prof"
                    android:drawablePadding="@dimen/xxhdpi_20"
                    android:text="Manage Address"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prof_paymrnt_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_20"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_payment"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Payment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prof_wallet_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_payment"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Wallet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_your_order_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_your_order"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Your Order"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prof_your_fav_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/ic_fav"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Your Favourites"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_fav_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_fav"
                    android:drawablePadding="@dimen/xxhdpi_20"
                    android:text="Favourites"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_referal_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:drawableLeft="@drawable/ic_referals"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Referrals"
                    android:textColor="@color/white"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_offers_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5"
                android:visibility="visible">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/ic_offers"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Offers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/prof_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:drawableLeft="@drawable/ic_offers"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="About Us"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_help_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:drawableLeft="@drawable/ic_help"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:drawableLeft="@drawable/ic_help"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="FAQ"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/prof_logout_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:layout_marginBottom="@dimen/xxhdpi_10"
                android:padding="@dimen/xxhdpi_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="@dimen/xxhdpi_10"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_chevron_arrow_right" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>