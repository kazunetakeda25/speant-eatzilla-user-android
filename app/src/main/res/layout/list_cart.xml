<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="@dimen/xxhdpi_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/add_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/list_cart_item_amt"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_qty_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/round_rect_bor"
                android:paddingBottom="@dimen/xxhdpi_5"
                android:paddingLeft="@dimen/xxhdpi_5"
                android:paddingRight="@dimen/xxhdpi_5"
                android:paddingTop="@dimen/xxhdpi_5"
                android:visibility="visible"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_qty_plus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/xxhdpi_5"
                    android:src="@drawable/ic_plus"/>

                <TextView
                    android:id="@+id/item_qty_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAlignment="center"
                    android:gravity="center"
                   android:textColor="@color/colorAccent"
                    android:minWidth="@dimen/xxhdpi_20"
                    android:textSize="@dimen/t_xxh_18"/>

                <ImageView
                    android:id="@+id/item_qty_minus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:src="@drawable/ic_minus"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BBQ Chicken Wings"
            android:textColor="@color/black"
            android:textSize="@dimen/t_xxh_15"
            android:fontFamily="@font/sourcesanspro_regular"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xxhdpi_10"
            android:layout_toLeftOf="@id/add_linear"
            android:drawableLeft="@drawable/ic_red_agmark"
            android:drawablePadding="@dimen/xxhdpi_10"/>

        <TextView
            android:id="@+id/list_cart_item_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/t_xxh_15"
            android:minWidth="@dimen/xxhdpi_50"
            android:gravity="end"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="@dimen/xxhdpi_10"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>