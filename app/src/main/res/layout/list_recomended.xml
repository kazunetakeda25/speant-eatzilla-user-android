<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/xxhdpi_10"
    android:layout_margin="@dimen/xxhdpi_10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/add_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/item_add_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rect_bor"
                android:paddingBottom="@dimen/xxhdpi_5"
                android:paddingLeft="@dimen/xxhdpi_20"
                android:paddingRight="@dimen/xxhdpi_20"
                android:paddingTop="@dimen/xxhdpi_5"
                android:text="Add"
                android:gravity="center"
                android:fontFamily="@font/sourcesanspro_regular"
                android:minWidth="@dimen/xxhdpi_100"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/t_xxh_16"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/item_qty_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/xxhdpi_100"
                android:gravity="center"
                android:background="@drawable/round_rect_bor"
                android:paddingBottom="@dimen/xxhdpi_5"
                android:paddingLeft="@dimen/xxhdpi_5"
                android:paddingRight="@dimen/xxhdpi_5"
                android:paddingTop="@dimen/xxhdpi_5"
                android:visibility="gone"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_qty_minus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_minus"/>

                <TextView
                    android:id="@+id/item_qty_txt_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:gravity="center"
                    android:minWidth="@dimen/xxhdpi_20"
                    android:textSize="@dimen/t_xxh_16"
                    android:textColor="@color/black"
                    android:paddingLeft="@dimen/xxhdpi_5"
                    android:paddingRight="@dimen/xxhdpi_5"
                    android:layout_marginLeft="@dimen/xxhdpi_5"
                    android:layout_marginRight="@dimen/xxhdpi_5"/>

                <ImageView
                    android:id="@+id/item_qty_plus_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_plus"/>



            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/add_linear"
            android:layout_marginRight="@dimen/xxhdpi_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BBQ Chicken Wings"
                android:textColor="@color/black"
                android:textSize="@dimen/t_xxh_16"

                android:drawableLeft="@drawable/ic_red_agmark"
                android:drawablePadding="@dimen/xxhdpi_10"/>

            <TextView
                android:id="@+id/item_amt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_16"
                android:layout_marginTop="@dimen/xxhdpi_5"
                android:textColor="@color/colorAccent"
                android:text="à¤° 25.5"/>
            <TextView
                android:id="@+id/item_desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_10"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/xxhdpi_5"
                android:text="Chicken Wings Cooked with BBQ and Honey"/>
            <TextView
                android:id="@+id/item_offer_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_10"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/xxhdpi_10"
                android:text="Chicken Wings Cooked with BBQ and Honey"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/lay_name"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/xxhdpi_5"
            android:background="@color/grey"/>

    </RelativeLayout>

</LinearLayout>