    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/xxhdpi_10">

        <RelativeLayout
            android:id="@+id/lay_rest_det"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:checked="false"
                android:layout_marginEnd="@dimen/xxhdpi_10"
                android:fontFamily="@font/sourcesanspro_regular"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/t_xxh_14"
                android:scaleX=".8"
                android:scaleY=".8"
                android:visibility="visible"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                style="@style/SwitchCompatStyle"
                android:text="@string/veg" />-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotel_detail_hotel_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_bold"
                    android:gravity="center"
                    android:paddingBottom="@dimen/xxhdpi_5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_22" />


                <TextView
                    android:id="@+id/hotel_detail_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_16"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/hotel_detail_hotel_type_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_16" />

                <TextView
                    android:id="@+id/hotel_detail_hotel_discount_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxhdpi_5"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_14"
                    android:visibility="gone" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/lay_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lay_rest_det"
            android:layout_marginTop="@dimen/xxhdpi_10"
            android:layout_marginBottom="@dimen/xxhdpi_10"
            android:background="@color/lit_grey" />

        <LinearLayout
            android:id="@+id/lay_rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_line"
            android:layout_marginTop="@dimen/xxhdpi_5"
            android:layout_marginBottom="@dimen/xxhdpi_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hotel_detail_time_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery Time"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_12" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_offer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hotel_detail_amt_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offer"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/hotel_detail_rating_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_star_black"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/sourcesanspro_semibold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_14" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rating"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_xxh_12" />

            </LinearLayout>


            <!-- <TextView
                 android:id="@+id/hotel_detail_rating_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/xxhdpi_10"
                 android:background="@drawable/round_rect"
                 android:drawableLeft="@drawable/ic_star"
                 android:drawablePadding="@dimen/xxhdpi_5"
                 android:paddingBottom="3dp"
                 android:paddingLeft="@dimen/xxhdpi_5"
                 android:paddingRight="@dimen/xxhdpi_5"
                 android:paddingTop="3dp"
                 android:text="3.5"
                 android:textColor="@color/white" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xxhdpi_20">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_credit_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/tag"
                android:fontFamily="@font/sourcesanspro_regular"
                android:gravity="center_vertical"
                android:visibility="invisible"
                android:text="Credit offer Available"
                android:drawablePadding="@dimen/xxhdpi_5"
                android:layout_weight="1"
                android:textColor="@color/black" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchButton"
                style="@style/SwitchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@+id/lay_rest"
                android:layout_weight="1"
                android:checked="false"
                android:fontFamily="@font/sourcesanspro_regular"
                android:scaleX=".8"
                android:scaleY=".8"
                android:text="@string/veg"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/t_xxh_14"
                android:visibility="visible"
                app:switchPadding="@dimen/xxhdpi_20" />

        </LinearLayout>


    </LinearLayout>

</com.speant.user.Common.CustomLayout>