<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_marginStart="@dimen/xxhdpi_10"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lay_pop_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="@drawable/grey_circle_bg"
        android:fastScrollEnabled="true">


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_brand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_pop_img"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:maxLines="2"
        android:ellipsize="end"
        android:background="@color/shimmer_bg"
        android:layout_marginTop="@dimen/xxhdpi_5"
        android:textSize="@dimen/t_xxh_12"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:fontFamily="@font/sourcesanspro_semibold"/>

</RelativeLayout>