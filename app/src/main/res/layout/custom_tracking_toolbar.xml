<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:padding="@dimen/xxhdpi_5">

    <ImageView
        android:id="@+id/back_arrow_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/xxhdpi_10"
        android:src="@drawable/ic_arrow_left_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/xxhdpi_5"
        android:layout_marginRight="@dimen/xxhdpi_5"
        android:layout_toLeftOf="@id/right_lay"
        android:layout_toRightOf="@id/back_arrow_toolbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/track_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesanspro_semibold"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/t_xxh_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text="11:06 Pm "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/t_xxh_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/item_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text=" 1 Item "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/t_xxh_14" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:background="@color/colorWhite" />

            <TextView
                android:id="@+id/amt_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sourcesanspro_regular"
                android:text=" $ 421.00 "
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/t_xxh_14" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/xxhdpi_10">



        <TextView
            android:id="@+id/track_help_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xxhdpi_10"
            android:fontFamily="@font/sourcesanspro_regular"
            android:text="Help"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/t_xxh_16" />


    </LinearLayout>


</RelativeLayout>