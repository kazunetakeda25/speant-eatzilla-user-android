<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/xxhdpi_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_14"
                android:textColor="@color/black"
                android:text="Rate your Food "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/t_xxh_16"
                android:textColor="@color/black"
                android:text=" - The Punjab Express."/>
        </LinearLayout>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/hotel_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rating="2.5"
            android:layout_marginTop="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_100"
            style="@style/Widget.MaterialRatingBar.RatingBar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/xxhdpi_20"
            android:layout_marginBottom="@dimen/xxhdpi_5"
            android:background="@color/grey"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Got any other Suggestions? Let us Know...."
            android:layout_margin="@dimen/xxhdpi_20"
            android:paddingTop="@dimen/xxhdpi_10"
            android:paddingBottom="@dimen/xxhdpi_10"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/xxhdpi_5"
            android:layout_marginBottom="@dimen/xxhdpi_5"
            android:background="@color/grey"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rate Delivery by Praveen"
            android:layout_marginTop="@dimen/xxhdpi_10"
            android:textColor="@color/black"/>

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/delivery_boy_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rating="2.5"
            android:layout_marginTop="@dimen/xxhdpi_5"
            android:layout_marginRight="@dimen/xxhdpi_100"
            style="@style/Widget.MaterialRatingBar.RatingBar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/xxhdpi_30">

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fastScrollEnabled="true"
                card_view:cardCornerRadius="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:padding="@dimen/xxhdpi_10"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/t_xxh_18"
                    android:text="Enter Delivery Rating"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>