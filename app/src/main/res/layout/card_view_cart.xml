<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/hotel_detail_card_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:visibility="visible"
        android:layout_margin="@dimen/xxhdpi_20"
        app:layout_anchorGravity="bottom|center"
        app:layout_anchor="@id/menu_bottom_sheet">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/xxhdpi_5"
            android:fastScrollEnabled="true"
            app:cardCornerRadius="@dimen/xxhdpi_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxhdpi_5"
                android:paddingBottom="@dimen/xxhdpi_5"
                android:background="@color/colorAccent">

                <TextView
                    android:id="@+id/hotel_detail_cart_amt_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20"
                    android:textSize="@dimen/t_xxh_16"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/xxhdpi_20"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/view_cart_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Cart"
                    android:gravity="center"
                    android:textSize="@dimen/t_xxh_16"
                    android:fontFamily="@font/sourcesanspro_regular"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/hotel_detail_cart_amt_txt"
                    android:layout_toLeftOf="@+id/hotel_detail_cart_total_txt"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/hotel_detail_cart_total_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:paddingStart="@dimen/xxhdpi_10"
                    android:paddingEnd="@dimen/xxhdpi_10"
                    android:textAlignment="center"
                    android:background="@drawable/round_rect_white_bor"
                    android:textSize="@dimen/t_xxh_16"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/xxhdpi_10"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</LinearLayout>